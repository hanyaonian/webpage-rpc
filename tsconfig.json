{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "Node",
  },
  "include": ["./src"],
  "exclude": ["**/node_modules", "./dist/**/*"]
}